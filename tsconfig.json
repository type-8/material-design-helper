{
  "include": ["src/**/*", ".eslintrc.*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "src/**/*.d.ts"]
  }
}
